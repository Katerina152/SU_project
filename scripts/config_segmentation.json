{
  "experiment_name": "isic_vit_binary_224",
  "output_dir": "runs_seg",

  "task": "segmentation",

  "teacher": {
  "embeddings_path": "teacher_embs_random.pt"
},

  "data": {
    "domain": "derm_segmentation",
    "resolution": 224,
    "batch_size": 32,
    "num_workers": 4,
    "balanced_train": true,
    "val_split": 0.1
  },

  "class_weights": null,

  "model": {
    "type": "seg_vit",
    "backbone": {
      "hf_model_name": "google/vit-base-patch16-224",
      "pooling": "cls",
      "num_layers_to_use": null,
      "freeze_backbone": false
    },
    "head": {
      "type": "linear",
      "output_dim": 2,
      "output_activation": null
    },
    "loss_type": "ce"
  },

  "train": {
    "distill":false,
    "lamda_feat":1.0,
    "lamda_cos":1.0,
    "lr": 1e-4,
    "weight_decay": 0.0,
    "max_epochs": 2,
    "early_stopping_patience": 5,
    "top_k": 5,
    "seed": 42, 
    "profile_flops": true,
    "flops_batch": 10
  }
}

